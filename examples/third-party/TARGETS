runtime.cxx_library(
    name = "ggml",
    headers = glob([
        "llama.cpp/*.h",
    ]),
    srcs = [
        "llama.cpp/ggml.c",
        "llama.cpp/ggml-alloc.c",
        "llama.cpp/ggml-backend.c",
        "llama.cpp/ggml-quants.c",
    ],
    _is_external_target = True,
    exported_external_deps = [
        ("glibc", None, "pthread"),
    ],
)
